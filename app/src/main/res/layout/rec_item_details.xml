<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_name_details"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#C52727"
        android:textSize="24dp"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_email_details"
        app:layout_constraintTop_toBottomOf="@id/text_name_details"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="italic"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_body_details"
        app:layout_constraintTop_toBottomOf="@id/text_email_details"
        android:textSize="18dp"
        android:textStyle="italic"/>


</androidx.constraintlayout.widget.ConstraintLayout>